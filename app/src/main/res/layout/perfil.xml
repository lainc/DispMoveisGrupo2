<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_perfil"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/img_perfil"
        android:maxHeight="150dp"
        android:maxWidth="150dp"
        android:adjustViewBounds="true"/>
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toRightOf="@id/img_perfil"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/user_lvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_lvl"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toRightOf="@id/img_perfil"
        android:layout_below="@id/user_name"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/user_xp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_xp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toRightOf="@id/img_perfil"
        android:layout_below="@id/user_lvl"
        android:layout_marginLeft="10dp"/>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_below="@id/user_xp"
        android:layout_toRightOf="@id/img_perfil"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/friend"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@id/img_perfil"
        android:layout_marginTop="10dp"
        android:textColor="#3d3d3d"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/friend"
        android:background="#3d3d3d">
    </RelativeLayout>
</RelativeLayout>